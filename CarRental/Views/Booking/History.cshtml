@model CarRental.Models.ViewModels.Booking.PaginatedHistoryViewModel


@{
    ViewData["Title"] = "Booking History";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Car Make</th>
            <th>Car Model</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.Make</td>
                <td>@booking.Model</td>
                <td>@booking.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@booking.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@booking.TotalPrice.ToString("C")</td>

                <td>
                    @if (booking.Status.Contains("Returned"))
                    {
                        <p>Returned</p>
                    }
                    else
                    {
                        <form asp-action="Return" asp-controller="Booking" method="get">
                            <input type="hidden" name="BookingId" value="@booking.BookingId" />
                            <button type="submit" class="btn btn-primary">Return</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container mt-4">
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("History", new { page = Model.CurrentPage - 1 })">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("History", new { page = i })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("History", new { page = Model.CurrentPage + 1 })">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>


