@model CarRental.Models.ViewModels.Booking.CreateViewModel

@{
    ViewData["Title"] = "Create Booking";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container d-flex justify-content-center mt-4">
    <form asp-action="Create" method="post">
        <input name="CarId" value="@Model.CarId" hidden />

        <div class="card p-4 gap-3">
            <div class="form-group">
                <label for="make">Car Make</label>
                <input type="text" class="form-control" id="make" name="Make" value="@Model.Make" readonly />
            </div>

            <div class="form-group">
                <label for="model">Car Model</label>
                <input type="text" class="form-control" id="model" name="Model" value="@Model.Model" readonly />
            </div>

            <div class="form-group">
                <label for="startDate">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="form-group">
                <label for="endDate">End Date</label>
                <input type="date" class="form-control" id="endDate" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="form-group">
                <label for="totalPrice">Total Price</label>
                <input type="text" class="form-control" id="totalPrice" name="PricePerDay" value="@Model.PricePerDay" readonly />
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-primary">Create Booking</button>
            </div>
        </div>
    </form>
</div>